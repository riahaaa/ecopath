<!-- activity_my_content.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- 상단바 (뒤로 가기 버튼과 타이틀) -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_back"
            android:contentDescription="뒤로 가기 버튼"
            android:layout_alignParentStart="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:padding="4dp" />


        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ecoPATH"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:layout_centerHorizontal="true" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="23dp" />
    </RelativeLayout>

    <!-- 작성자 정보와 작성 시간 -->
    <LinearLayout
        android:id="@+id/accountInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/backButton"
        android:layout_marginTop="16dp">


        <!-- 작성자 이름 -->
        <TextView
            android:id="@+id/authorName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="계정주"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium" />

        <!-- 작성 시간 -->
        <TextView
            android:id="@+id/postTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17:00 작성"
            android:textSize="14sp"
            android:layout_marginEnd="8dp" />
    </LinearLayout>

    <!-- 본문 내용 -->
    <TextView
        android:id="@+id/postContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/accountInfo"
        android:layout_marginTop="16dp"
        android:text="게시글 본문 내용이 여기에 표시됩니다."
        android:textSize="16sp"
        android:lineSpacingExtra="4dp"
        android:maxLines="5" />

    <!-- 수정/삭제 버튼 -->
    <LinearLayout
        android:id="@+id/editDeleteButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/postContent"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/editButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="1dp"
            android:paddingHorizontal="6dp"
            android:text="수정"
            android:textSize="12sp"
            android:backgroundTint="@color/green" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="1dp"
            android:paddingHorizontal="6dp"
            android:layout_marginStart="6dp"
            android:text="삭제"
            android:textSize="12sp"
            android:backgroundTint="@color/green" />
    </LinearLayout>

    <!-- 작성한 게시글과 답글 목록 -->
    <TextView
        android:id="@+id/myPostsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editDeleteButtons"
        android:layout_marginTop="16dp"
        android:text="내가 작성한 게시글과 답글"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium" />

</RelativeLayout>
