<!-- community_main.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- 상단바 -->
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- 뒤로 가기 버튼 -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_back"
            android:contentDescription="뒤로 가기 버튼"
            android:layout_alignParentStart="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:padding="4dp" />


        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ecoPATH"
            android:textSize="24sp"
            android:fontFamily="sans-serif-medium"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/menuButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_menu"
            android:layout_alignParentEnd="true"
            android:contentDescription="메뉴 버튼" />
    </RelativeLayout>

    <!-- 게시물 목록 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/topBar"
        android:layout_above="@id/writeButton"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 각 게시물 항목 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_marginBottom="8dp">

                <!-- 작성자, 작성 시간, 수정/삭제 버튼 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/authorName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="작성자"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/postTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="18:00"
                        android:textSize="12sp" />

                    <!-- 수정/삭제 버튼 (작성자일 때만 보이게 설정 가능) -->
                    <LinearLayout
                        android:id="@+id/editDeleteButtons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/authorName"
                        android:layout_alignParentEnd="true"
                        android:orientation="horizontal"
                        android:visibility="gone"> <!-- 작성자일 경우 'visible'로 변경 -->

                        <Button
                            android:id="@+id/editButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="수정" />

                        <Button
                            android:id="@+id/deleteButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="삭제" />
                    </LinearLayout>
                </RelativeLayout>

                <!-- 본문 일부분 -->
                <TextView
                    android:id="@+id/postContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="본문 내용 일부..."
                    android:textSize="14sp"
                    android:maxLines="3"
                    android:ellipsize="end" />

                <!-- 공감수, 댓글 개수 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/likeCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="공감 2"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/commentCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="댓글 1"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- 글쓰기 버튼 -->
    <ImageButton
        android:id="@+id/writeButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="36dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="글쓰기 버튼"
        android:src="@drawable/ic_add"
        android:scaleType="centerInside" />

</RelativeLayout>
